# Google Cloud Environment Variables for Aequitas
# This file contains the environment variables needed for deployment to Google Cloud

# Database Configuration (Cloud SQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=aequitas
DB_USER=aequitas_user
DB_HOST=/cloudsql/PROJECT_ID:REGION:aequitas-db
DB_PORT=5432
# DB_PASS is managed by Google Secret Manager

# Django Settings
# SECRET_KEY is managed by Google Secret Manager
DEBUG=0
ENV=PROD
ALLOWED_HOSTS=*

# Server Configuration
USE_GUNICORN=1

# Google Cloud specific settings
GOOGLE_CLOUD_PROJECT=PROJECT_ID
GOOGLE_CLOUD_REGION=us-central1

# Static files (for Cloud Storage if needed in future)
# STATIC_URL=/static/
# MEDIA_URL=/media/